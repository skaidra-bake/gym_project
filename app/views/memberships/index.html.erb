<div class='container'>
  <h1>Memberships</h1>

  <table>
    <thead>
      <tr>
        <th>Membership</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
          <td><%= membership.name %></td>
          <td><%= membership.price %></td>
          <td><%= link_to 'Show', membership_path(membership) %></td>
          <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
          <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Membership', new_membership_path %><br /><br />
  <%= link_to 'Buy a day pass!', new_one_day_pass_path %><br /><br />
  <% if member_signed_in? %>
    <%= link_to 'Sign out', destroy_member_session_path, method: :delete %>
  <% else %>
    <%= link_to 'Sign in', new_member_session_path %>
  <% end %>
</div>
